<UserControl x:Class="TWeather2015.Theme.DIconManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TWeather2015.Theme"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid Background="Transparent" x:Name="gridMain" ShowGridLines="False" MouseDown="gridMain_MouseDown" MouseUp="gridMain_MouseUp" MouseMove="gridMain_MouseMove" IsHitTestVisible="True">
        
    </Grid>
        <Canvas>
            <Rectangle
                x:Name="selectionBox"
                Visibility="Collapsed"
                Stroke="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}"
                StrokeThickness="2" Fill="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" Opacity="0.2"
                />
        </Canvas>
    </Grid>
</UserControl>
