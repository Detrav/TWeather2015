<UserControl x:Class="TWeather2015.Theme.DIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TWeather2015.Theme"
             mc:Ignorable="d" 
             d:DesignHeight="85" d:DesignWidth="75">
    <Button x:Name="borderMain" Width="75" HorizontalAlignment="Center" VerticalAlignment="Top" Background="Transparent" BorderBrush="Transparent" Click="borderMain_Click" PreviewMouseDown="borderMain_PreviewMouseDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Image Grid.Row="0" Height="50" Width="50" Source="/TWeather2015;component/Resources/empty.png"/>
            <TextBlock  Grid.Row="1" Text="TestTestTestTestTestTest" HorizontalAlignment="Center" VerticalAlignment="Top" x:Name="textBlock" Foreground="White" MaxWidth="75" FontFamily="Comic Sans MS" TextWrapping="Wrap" TextAlignment="Center"  TextTrimming="CharacterEllipsis" Panel.ZIndex="1000">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="5" ShadowDepth="0" Color="Black"/>
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
    </Button>
</UserControl>
