<UserControl x:Class="TWeather2015.Theme.DIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TWeather2015.Theme"
             mc:Ignorable="d" 
             d:DesignHeight="85" d:DesignWidth="75">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Height="50" Width="50" Source="/TWeather2015;component/Resources/empty.png"/>
        <TextBlock  Grid.Row="1" Text="Test" HorizontalAlignment="Center" VerticalAlignment="Top" x:Name="textBlock" Foreground="Black" MaxWidth="75" FontFamily="Comic Sans MS" >
            <TextBlock.Effect>
                <DropShadowEffect/>
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</UserControl>
